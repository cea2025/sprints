// Prisma Schema for Sprint Management System
// Updated with Objectives, M:N Sprint-Rock, and quarterly tracking

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// ==================== ENUMS ====================

enum UserRole {
  ADMIN      // Full access - manage users, all CRUD
  MANAGER    // Create, edit, delete rocks/sprints/stories
  MEMBER     // View all, edit own stories
  VIEWER     // View only
}

enum RockStatus {
  PLANNED
  IN_PROGRESS
  AT_RISK
  DONE
}

enum RockHealth {
  GREEN      // On track
  YELLOW     // At risk
  RED        // Off track
}

enum SprintState {
  PLANNED
  ACTIVE
  CLOSED
}

enum StoryStatus {
  TODO
  IN_PROGRESS
  BLOCKED
  DONE
}

enum Priority {
  LOW
  MEDIUM
  HIGH
}

// ==================== MODELS ====================

model User {
  id            String   @id @default(uuid())
  googleId      String   @unique
  email         String   @unique
  name          String
  picture       String?
  role          UserRole @default(VIEWER)
  isActive      Boolean  @default(true)
  
  teamMember    TeamMember?
  
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
}

model TeamMember {
  id        String   @id @default(uuid())
  name      String
  role      String
  capacity  Int?     // points per sprint
  isActive  Boolean  @default(true)
  
  userId    String?  @unique
  user      User?    @relation(fields: [userId], references: [id])
  
  ownedRocks      Rock[]
  ownedStories    Story[]
  ownedObjectives Objective[]
  
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

// ==================== OBJECTIVE (NEW) ====================
// מטרת-על שנתית/חצי-שנתית שמאגדת כמה סלעים

model Objective {
  id          String   @id @default(uuid())
  code        String   @unique  // "25-OBJ-1"
  name        String
  description String?
  timeframe   String   // "2025" / "H1-2025" / "H2-2025"
  targetValue Int?     // KR target (optional)
  metric      String?  // מדד ה-KR (תיאור)
  
  ownerId     String?
  owner       TeamMember? @relation(fields: [ownerId], references: [id])
  
  rocks       Rock[]
  
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

// ==================== ROCK (UPDATED) ====================
// סלע - יעד רבעוני עם תמיכה בגלישה בין רבעונים

model Rock {
  id              String     @id @default(uuid())
  code            String     @unique  // "25-Q4-1" (זהות קבועה)
  name            String
  description     String?
  status          RockStatus @default(PLANNED)
  
  // שדות רבעון
  yearOfRecord    Int        @default(2025)  // שנת יעד מקורית
  originalQuarter Int        @default(4)     // רבעון יעד מקורי (1-4)
  currentQuarter  Int        @default(4)     // רבעון נוכחי - מתעדכן כשגולש
  
  // נקודות ובריאות
  committedPoints Int        @default(0)  // התחייבות לרבעון הנוכחי
  health          RockHealth @default(GREEN)
  
  // קשרים
  ownerId         String?
  owner           TeamMember? @relation(fields: [ownerId], references: [id])
  
  objectiveId     String?
  objective       Objective?  @relation(fields: [objectiveId], references: [id])
  
  stories         Story[]
  sprintRocks     SprintRock[]
  quarterLogs     RockQuarterLog[]
  
  createdAt       DateTime   @default(now())
  updatedAt       DateTime   @updatedAt
}

// ==================== SPRINT (UPDATED) ====================
// ספרינט - תקופת עבודה קצובה

model Sprint {
  id             String      @id @default(uuid())
  name           String      @unique  // "25-Q1-S1"
  goal           String?
  startDate      DateTime
  endDate        DateTime
  capacityPoints Int         @default(0)  // קיבולת נקודות לספרינט
  state          SprintState @default(PLANNED)
  
  // קשרים M:N עם סלעים
  sprintRocks    SprintRock[]
  stories        Story[]
  
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt
}

// ==================== SPRINT-ROCK (NEW - M:N) ====================
// טבלת קשר בין ספרינטים לסלעים

model SprintRock {
  id        String  @id @default(uuid())
  
  sprintId  String
  sprint    Sprint  @relation(fields: [sprintId], references: [id], onDelete: Cascade)
  
  rockId    String
  rock      Rock    @relation(fields: [rockId], references: [id], onDelete: Cascade)
  
  createdAt DateTime @default(now())
  
  @@unique([sprintId, rockId])
}

// ==================== STORY ====================

model Story {
  id          String      @id @default(uuid())
  title       String
  description String?
  status      StoryStatus @default(TODO)
  priority    Priority    @default(MEDIUM)
  estimate    Int?        // points
  
  sprintId    String?
  sprint      Sprint?     @relation(fields: [sprintId], references: [id])
  
  rockId      String?
  rock        Rock?       @relation(fields: [rockId], references: [id])
  
  ownerId     String?
  owner       TeamMember? @relation(fields: [ownerId], references: [id])
  
  createdAt   DateTime    @default(now())
  updatedAt   DateTime    @updatedAt
}

// ==================== ROCK QUARTER LOG (OPTIONAL) ====================
// לוג היסטורי לרבעון - צילום מצב בסוף כל רבעון

model RockQuarterLog {
  id              String   @id @default(uuid())
  
  rockId          String
  rock            Rock     @relation(fields: [rockId], references: [id], onDelete: Cascade)
  
  year            Int
  quarter         Int      // 1-4
  committedPoints Int
  donePoints      Int
  wasCarryOver    Boolean  @default(false)  // האם גלש מרבעון קודם
  
  closedAt        DateTime @default(now())
}

// ==================== ACCESS CONTROL ====================

model AllowedEmail {
  id          String   @id @default(uuid())
  email       String   @unique
  name        String?  // Optional name for reference
  role        UserRole @default(VIEWER) // Default role when user registers
  addedBy     String?  // ID of admin who added this email
  note        String?  // Optional note about this user
  
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}
